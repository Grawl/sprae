{
  "name": "sprae",
  "description": "DOM microhydration.",
  "version": "5.3.0",
  "main": "src/index.js",
  "module": "src/index.js",
  "type": "module",
  "dependencies": {
    "swapdom": "^1.1.1"
  },
  "devDependencies": {
    "@preact/signals": "^1.1.3",
    "es-module-shims": "^1.6.2",
    "esbuild": "^0.15.14",
    "hyperf": "^1.6.2",
    "jsdom": "^21.1.0",
    "signal-struct": "^1.10.0",
    "terser": "^5.15.1",
    "tst": "^7.1.1",
    "usignal": "^0.8.9",
    "value-ref": "^2.1.0",
    "wait-please": "^3.1.0"
  },
  "scripts": {
    "test": "node -r ./test/register.cjs test/test.js",
    "build": "npm run build-esm && npm run build-iife && npm run min",
    "build-esm": "esbuild --bundle ./src/index.js --outfile=sprae.js --format=esm",
    "build-iife": "esbuild --bundle ./src/index.js --outfile=sprae.auto.js --format=iife",
    "watch": "esbuild --bundle ./src/index.js --outfile=sprae.js --format=esm --sourcemap --watch",
    "min": "terser sprae.js -o sprae.min.js --module -c passes=3 -m && terser sprae.auto.js -o sprae.auto.min.js --module -c passes=3 -m"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dy/sprae.git"
  },
  "keywords": [
    "hydration",
    "preact-signals",
    "signals",
    "observable",
    "reactive",
    "petite-vue",
    "template-parts",
    "templize",
    "alpinejs",
    "directives",
    "templating"
  ],
  "author": "Dmitry Ivanov <df.creative@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dy/sprae/issues"
  },
  "homepage": "https://github.com/dy/sprae#readme"
}
