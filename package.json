  "type": "module",
  "files": [
    "src",
    "dist",
    "directive"
  ],
  "dependencies": {
    "subscript": "^8.2.2",
    "swapdom": "^1.1.1"
  },
  "devDependencies": {
    "@preact/signals": "^1.1.3",
