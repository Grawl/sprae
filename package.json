{
  "name": "sprae",
  "description": "DOM microhydration.",
  "version": "8.1.3",
  "main": "src/index.js",
  "module": "src/index.js",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@preact/signals-core": "^1.5.0",
    "subscript": "^8.2.2",
    "swapdom": "^1.1.1"
  },
  "devDependencies": {
    "@preact/signals": "^1.1.3",
    "es-module-shims": "^1.6.2",
    "esbuild": "^0.15.14",
    "hyperf": "^1.6.2",
    "jsdom": "^21.1.0",
    "terser": "^5.15.1",
    "tst": "^7.1.1",
    "usignal": "^0.9.0",
    "wait-please": "^3.1.0"
  },
  "scripts": {
    "test": "node -r ./test/register.cjs test/test.js",
    "build": "npm run build-esm && npm run min",
    "build-esm": "esbuild --bundle ./src/index.js --outfile=./dist/sprae.js --format=esm",
    "watch": "esbuild --bundle ./src/index.js --outfile=./dist/sprae.js --format=esm --sourcemap --watch",
    "min": "terser ./dist/sprae.js -o ./dist/sprae.min.js --module -c passes=3 -m"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dy/sprae.git"
  },
  "keywords": [
    "hydration",
    "preact-signals",
    "signals",
    "observable",
    "reactive",
    "petite-vue",
    "template-parts",
    "templize",
    "alpinejs",
    "directives",
    "templating"
  ],
  "author": "Dmitry Iv <df.creative@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dy/sprae/issues"
  },
  "homepage": "https://github.com/dy/sprae#readme"
}
